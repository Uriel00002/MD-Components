<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_padding_default"
    tools:context=".fragments.CardFragment">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cammon_padding_min"
        android:layout_marginEnd="@dimen/cammon_padding_min"
        android:layout_marginTop="@dimen/cammon_padding_min"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/common_padding_default"
            android:paddingEnd="@dimen/common_padding_default"
            android:paddingStart="@dimen/common_padding_nano">
            <ImageView
                android:id="@+id/imageCardSmall"
                android:layout_width="@dimen/card_img_size"
                android:layout_height="@dimen/card_img_size"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFirts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_enabled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageCardSmall"
                android:layout_marginTop="@dimen/cammon_padding_min"
                android:layout_marginStart="@dimen/cammon_padding_min"
                android:layout_marginEnd="@dimen/cammon_padding_min"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_default"
                app:layout_constraintStart_toEndOf="@id/btnFirts"
                app:layout_constraintTop_toTopOf="@id/btnFirts"
                app:layout_constraintTop_toBottomOf="@id/btnFirts"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <TextView
                android:id="@+id/tvTtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/card_title_demo"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_marginStart="@dimen/common_padding_default"
                android:layout_marginEnd="@dimen/common_padding_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageCardSmall"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/card_message_demo_small"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginStart="@dimen/common_padding_default"
                android:layout_marginEnd="@dimen/common_padding_default"
                app:layout_constraintStart_toStartOf="@id/tvTtitle"
                app:layout_constraintEnd_toStartOf="@id/tvTtitle"
                app:layout_constraintTop_toBottomOf="@id/tvTtitle"
                app:layout_constraintTop_toTopOf="@id/btnFirts"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>